{
	"name": "almond-be",
	"version": "1.0.0",
	"description": "Almond backend API for the hydroponics farm",
	"main": "src/index.ts",
	"scripts": {
		"prebuild": "rm -rf ./build",
		"build": "tsc",
		"postbuild": "cp -R ./src/assets ./build",
		"serve": "node build/index.js",
		"start:dev": "NODE_ENV=development nodemon",
		"start": "NODE_ENV=production yarn run serve",
		"kill": "kill-port",
		"inspect": "nodemon --inspect src/index.ts",
    "test:unit": "cross-env NODE_ENV=testing jest --no-cache  --detectOpenHandles --runInBand --forceExit",
		"eslint": "eslint .",
		"eslint:fix": "eslint \"*/**/*.{js,ts}\" --fix",
		"tslint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet",
		"seed:data": "chmod u+x ./release.sh && ./release.sh",
		"prettier": "prettier --write src/app/**/*"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/almond-hydroponics/almond-be.git"
	},
	"author": "Francis Masha <francismasha96@gmail.com>",
