{
  "name": "almond-be",
  "version": "1.0.0",
  "description": "Almond backend API for the hydroponics farm",
  "main": "src/app.ts",
  "scripts": {
    "build-server": "babel ./ --out-dir dist --copy-files --ignore node_modules",
    "clean": "rm -rf dist && mkdir dist",
    "build": "yarn run clean && yarn run build-server",
    "serve": "node dist/src/app.ts",
    "start:dev": "NODE_ENV=development yarn run seed:data && nodemon",
    "start": "NODE_ENV=production yarn run build && yarn run serve",
    "heroku-postbuild": "yarn run build",
    "kill": "kill-port",
    "inspect": "nodemon --inspect src/app.ts",
    "test": "jest",
    "lint": "yarn run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "yarn run lint:eslint src/",
    "lint:fix": "yarn run lint:js -- --fix",
    "seed:data": "chmod u+x ./release.sh && ./release.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mashafrancis/almond-be.git"
  },
  "author": "Francis Masha <francismasha96@gmail.com>",
