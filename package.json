{
  "name": "almond-be",
  "version": "1.0.0",
  "description": "Almond backend API for the hydroponics farm",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "serve": "node --inspect --trace-warnings --max-old-space-size=8192 build/app.js",
    "start:dev": "NODE_ENV=development nodemon",
    "start": "NODE_ENV=production yarn run build && yarn run serve",
    "kill": "kill-port",
    "inspect": "nodemon --inspect src/app.ts",
    "test:unit": "cross-env NODE_ENV=testing jest --runInBand --detectOpenHandles --testTimeout=10000",
    "lint": "yarn run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext=ts src",
    "lint:ts": "yarn run lint:eslint src/",
    "lint:fix": "yarn run lint:ts --fix",
    "seed:data": "chmod u+x ./release.sh && ./release.sh",
    "prettier": "prettier --write src/**/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/almond-hydroponics/almond-be.git"
  },
  "author": "Francis Masha <francismasha96@gmail.com>",
  "license": "MIT",
  "keywords": [
    "javascript",
    "typescript",
    "node",
    "express"
  ],
