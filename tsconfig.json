{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "diagnostics": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
//    "strictNullChecks": true,
//    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "build",
    "**/*.test.tsx",
    "nginx-conf"
  ]
}
